<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/setting_close_button"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableStart="@drawable/arrow_back"/>

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:fontFamily="@font/righteous_regular"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

    </LinearLayout>




    <Switch
        android:id="@+id/switch_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:paddingStart="16dp"/>

    <Switch
        android:id="@+id/switch_high_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High Contrast Mode"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For the color blind"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="4dp"
        android:paddingStart="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:padding="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:drawableEnd="@drawable/greater_than"
        android:drawablePadding="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms &amp; Conditions"
        android:padding="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:drawableEnd="@drawable/greater_than"
        android:drawablePadding="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bug Reports &amp; Feedback"
        android:padding="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/greater_than"
        android:drawablePadding="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/developers_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developers"
        android:padding="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:textColor="@color/black"/>


        <Button
            android:id="@+id/Developer_button"
            android:layout_width="244dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableEnd="@drawable/greater_than" />

    </LinearLayout>


</LinearLayout>
