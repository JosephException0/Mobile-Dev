<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:elevation="8dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/logout_message">

    </ImageView>
    <TextView
        android:id="@+id/logout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Logout"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/logout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to log out?"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:background="@drawable/rounded"
            android:backgroundTint="#6AAA64"
            android:textColor="@color/white"

            android:paddingHorizontal="20dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Logout"
            android:background="@drawable/rounded"
            android:backgroundTint="#C9B458"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"/>
    </LinearLayout>

</LinearLayout>
