            android:textStyle="bold"
            android:fontFamily="@font/righteous_regular"
            android:paddingTop="8dp"
            android:textColor="@color/help_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/help_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wordify helps you improve your vocabulary, track progress, and explore word games for fun and learning."
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/help_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“˜ Dictionary / Word Explorer"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/help_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search for a word to see its meaning, pronunciation, synonyms, and usage."
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/help_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Word Games / Quizzes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/help_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a game to test your vocabulary.\n\nEarn points or achievements as you progress.\n\nDifficulty adjusts automatically based on your score."
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/help_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Progress Tracking"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/help_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View your progress on the profile page.\n\nStats include most-learned words, quiz scores, etc."
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/help_text" />

    </LinearLayout>
</ScrollView>
