<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_hp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/help_background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HelpPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_button_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparent"
            android:drawableStart="@drawable/arrow_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How To Play"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/righteous_regular"
            android:paddingTop="30dp"
            android:textColor="@color/game_text" />

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guess the Wordle in 6 tries."
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/game_text" />

        <TextView
            android:id="@+id/text_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Each guess must be a valid \n  5-letter word."
            android:fontFamily="@font/poppins_regular"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/game_text" />

        <TextView
            android:id="@+id/intro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• The color of the tiles will change to \n  show how close your guess was to the \n  word."
            android:textSize="20sp"
            android:textColor="@color/game_text" />

        <TextView
            android:id="@+id/text_dictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examples"
            android:fontFamily="@font/righteous_regular"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/game_text" />
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <TextView
                android:id="@+id/text1col1row"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/letter_in_place"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:text="W"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="33dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text2col1row"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.14" />

            <TextView
                android:id="@+id/text2col1row"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/letter_border"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="33dp"
                android:text="O"
                android:textStyle="bold"
                android:textColor="@color/game_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text3col1row"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.141" />

            <TextView
                android:id="@+id/text3col1row"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/letter_border"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="33dp"
                android:text="R"
                android:textStyle="bold"
                android:textColor="@color/game_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text4col1row"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.141" />

            <TextView
                android:id="@+id/text4col1row"
