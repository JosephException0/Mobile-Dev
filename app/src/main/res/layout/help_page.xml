                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.141" />

            <TextView
                android:id="@+id/text4col1row11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/letter_border"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="33dp"
                android:text="E"
                android:textStyle="bold"
                android:textColor="@color/game_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text5col1row"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.141" />

            <TextView
                android:id="@+id/text5col1row11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/letter_not_in"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="3dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="R"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="33dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.139" />



        </LinearLayout>

        <TextView
            android:id="@+id/intro4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R is not in the word in any spot."
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="11dp"
            android:textColor="@color/game_text" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/border_box"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />



    </LinearLayout>
</ScrollView>